<div class="add-form">
  <%= simple_form_for([@storage, @booking]) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :from, as: :string %>
      <%= f.input :to, as: :string %>
      <%= f.input :price %>

    </div>
    <%= f.submit "Submit your booking", class: "btn btn-primary" %>
  <% end %>

</div>



<%= content_for(:after_js) do %>
  <script>
    var date = new Date();

    $('#booking_from').datepicker({
      startDate: date,
      format: 'dd/mm/yyyy'
    });
    $('#booking_to').datepicker({
      startDate: date,
      format: 'dd/mm/yyyy'
    });
  </script>
<% end %>
