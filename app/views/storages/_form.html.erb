


<div class="container">

  <div class="col-md-offset-3 col-md-6">
    <div class="add-form">
      <h2>Add your storage type</h2>

<%= simple_form_for(@storage) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, input_html: { placeholder: "Title of storage" } %>
    <%= f.input :size, input_html: { placeholder: "In sqaure foot" } %>
    <%= f.input :description, input_html: { placeholder: "Description" } %>
  </div>

  <div class="form-actions">

    <%= f.button :submit, {class: "btn btn-primary" } %>
  </div>
<% end %>

